@model ErrorViewModel

<div class="error-page">
    <h2 class="headline text-warning"> 404</h2>

    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! Sayfa Bulunamdı.</h3>

        <p>
            Sunucularımızda bu sayfanın adresini bulamadık.
            Adres değiştirilmiş veya tamamen kaldırılmış olabilir.
            Bir şeylerin ters gittiğini düşünüyorsanız
            <a href="https://tacminyazilim.com/iletisim" target="_blank">İletişim</a> sayfamızdan bize ulaşabilirsiniz.
        </p>

        @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
        {
            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Hata Detayı
                </a>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    @Model.ErrorMessages.Join("<br />")
                </div>
            </div>
        }
    </div>
</div>