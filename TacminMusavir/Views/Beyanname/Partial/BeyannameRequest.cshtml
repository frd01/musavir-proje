@model BeyannameRequestModel


<div class="form-group row">
    <div class="col-md-4">
        @Html.Kendo().CheckBoxFor(x => x.Is_Vergi_No).Label("Vergi No/Tckn")
    </div>
    <div class="col-md-8">
        @(Html.Kendo().ComboBoxFor(x=>x.Firma_Id)
                        .Name("Firma_Id")
                        .Filter(FilterType.Contains)
                        .HtmlAttributes(new { style = "width: 100%;" })
                        .DataTextField("Unvan")
                        .DataValueField("Id")

                        .DataSource(dataSource => {
                            dataSource.Read("GibMukellefListesi", "beyanname");
                        })
                        .Suggest(true)
                        .Events(e=>e.Change("Firma_Id_change_event"))
                        )
        
    </div>
</div>

