        @Html.Kendo().DatePickerFor(x => x.TARIH_ILK).HtmlAttributes(new { style = "width: 100%;" })
    </div>
    @Html.LabelFor(x => x.TARIH_SON, new { @class = "col-md-2 col-form-label ml-1" })
    <div class="col-md-3">
        @Html.Kendo().DatePickerFor(x => x.TARIH_SON).HtmlAttributes(new { style = "width: 100%;" })
    </div>
