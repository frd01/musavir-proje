                        .Name("grid_combo")
                        .Filter(FilterType.Contains)
                        .HtmlAttributes(new { style = "width: 100%;" })
                        .DataTextField("Donem_Adi")
                        .DataValueField("Id")

                        .ValuePrimitive(true)

                        .DataSource(dataSource => {
                            dataSource.Read("BeyannameDonemListesi", "mukellef");
                        })
